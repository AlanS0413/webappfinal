doctype html
html 
    head
        link(rel="stylesheet", href="/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous")
        title= title
    body
        if show_login
            if user
                span
                    ul.navbar.navbar-expand-sm.bars.d-flex.justify-content-end
                        span.text-black.mx-2 
                            b   Logged in #{user.username}
                        a.btn.btn-outline-danger.btn-md.mx-3(href='/logout') Logout
            else
                ul.navbar.navbar-expand-sm.bars.d-flex.justify-content-end
                    a.btn.btn-outline-primary.btn-md.mx-3(href='/login') Sign in
        block content
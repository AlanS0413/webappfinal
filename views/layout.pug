doctype html
html
    head
        script(src="https://code.jquery.com/jquery-3.6.0.min.js")
        script(src="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.js")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/leaflet@1.7.1/dist/leaflet.css")
        meta(name="viewport", content="width=device=width,initial-scale=1")
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        link(rel="stylesheet", href="/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",crossorigin="anonymous")
        script(src="/places.js")
        title= title
    body
        if show_login
            if user
                span
                    ul.navbar.navbar-expand-sm.bars.d-flex.justify-content-end
                        form#search(role="search" action="/search/", method = "GET" class="d-flex align-items-center")
                            input#searchdata.form-control(type="search", placeholder="Search", aria-label="Search")
                            button.btn.btn-outline-success.mx-2(type="submit") Search
                        .col.justify-content-end.text-end
                                span.text-black.mx-2
                                    b   User #{user.username}
                                a.btn.btn-outline-danger.btn-md.mx-3(href='/logout') Logout
            else
                ul.navbar.navbar-expand-sm.bars.d-flex.justify-content-end
                    form#search(role="search" action= "/search/", method="GET" class="d-flex align-items-center")
                        input#searchdata.form-control(type="search", placeholder="Search", aria-label="Search")
                        button.btn.btn-outline-success.mx-2.ml-auto(type="submit") Search
                    .col.justify-content-end.text-end
                        a.btn.btn-outline-primary.btn-md.mx-3(href='/login') Sign in
        block content
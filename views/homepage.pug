extends layout.pug
mixin getContactList(contact)
    ul
        each contact in contacts
            li
block content
        body
                .container
                    h1.mt-12
                        b Contact List
                        a.my-auto.btn.btn-outline-primary.btn-md(href= '/create' class="btn-move-right") Create a new contact

                        ul#contact-list.list-group.text-center.pointer
                            li

                .container.text-center
                    h5
                        b Address Search
                    form#address.form.mx-auto.rounded.search-container(action="/contactsearch", method = "post")
                        input#searchaddress.form-control( type="search", placeholder="Address Search", aria-label="Address Search")
                        select#miles.form-select(name ="radius" aria-label="radius")
                                option(disabled, selected) Radius
                                option(value="1") 5 Miles
                                option(value="2") 10 Miles
                                option(value="3") 25 Miles

                        button.btn.btn-outline-success.my-2.text-center(type="submit") Locate

                .container.my-2.rounded.padded
                    #map-container
                        #map

                script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
                script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js", integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM=", crossorigin="")
                script.
                    map_init();
                    loadPlaces();
                    searchContact();
                    addressSearch();



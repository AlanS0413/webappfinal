extends layout.pug
block content
    .container.log.rounded.padded.my-5
        .row.g-3.align-items-center
            form.form(action="/signup", method = "post")
                h1.card-title.text-black
                    b Sign Up
                    h3
                    p
                    h.text-white Please select a username, and a password. Don't worry about any password rules here, we don't really care much about protecting your information - so 
                    b.text-white
                        code helloworld
                    h.text-white is just fine by us!
                    p
                    .row.g-3
                        .col-md-3
                            label(class="form-label", for = 'first') First Name
                            input(class= "form-control", aria-labelledby="first", name = 'first' required = "")


                        .col-md-3
                            label(class="form-label",for = 'last') Last Name
                            input(class= "form-control", aria-labelledby="last",name = 'last' required= "")
                        .col-md-6
                        hr

                        .col-md-3
                            label(class="form-label", for = 'username') Username
                            input(class= "form-control", aria-labelledby="username",type='text', name = 'username' required="")
                        .col-md-9

                        .col-md-3
                            label(class="form-label", for = 'password') Password
                            input(class= "form-control", aria-labelledby="password",type = 'password' name = 'signuppassword' required="")
                        .col-md-9

                        .col-md-3
                            label(class="form-label",for = 'confirmpassword') Confirm Password
                            input(class= "form-control", aria-labelledby="confirmpassword",type = 'password' name = 'confirmpassword' required="")
                        .col-md-9
                        hr

                    p
                        button.btn.btn-outline-primary.text-white(type='submit') Sign Up
                        a.btn.btn-link.text-danger(href='/') Nevermind
                    if message
                        p #{message}
                    p
                    b.text-white Already have an account?
                        a.btn.btn-link.text-white(href='/login') Sign in Here!
                    p

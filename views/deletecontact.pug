extends layout.pug

mixin getContactList(contact)
    ul  
        each contact in contacts 
            li 

block content 

    .container.rounded.padded
        each contact in contacts 

                h1
                    b Delete Contact
                .form.row.rounded
                    h2.text-white
                        b= contact.firstname + " " + contact.lastname 

                    p.text-danger
                        b Are you sure you want to delete this contact?
                    
                    form(action=`/${contact.id}/delete`, method="post")  
                        button.btn.btn-outline-danger(type='submit') Yes 
                        a.btn.btn-link.text-white(href=`/${contact.id}`)  Nevermind


